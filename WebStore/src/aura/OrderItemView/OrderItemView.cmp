<aura:component description="OrderItemView">
    <aura:attribute name="orderItem" type="OrderItem__c"/>


    <aura:registerEvent name="changeQuantity" type="c:ChangeOrderItemQuantityEvent"/>

    <lightning:layout multipleRows="true">
        <lightning:layoutItem size="2" class="slds-p-around--xx-small">
            <img src="{!'/s/sfsites/c'+v.orderItem.Preview__c}"/>
        </lightning:layoutItem>
        <lightning:layoutItem size="8" class="slds-p-top--large">
            <lightning:layout multipleRows="true">
                <lightning:layoutItem size="6">
                    Quantity:
                </lightning:layoutItem>
                <lightning:layoutItem size="6">
                    {!v.orderItem.Quantity__c}
                </lightning:layoutItem>
            </lightning:layout>

            <lightning:layout>
                <lightning:layoutItem size="6">
                    Price:
                </lightning:layoutItem>
                <lightning:layoutItem size="6">
                    <lightning:formattedNumber value="{!v.orderItem.Price__c * v.orderItem.Quantity__c}"
                                               style="currency" currencyDisplayAs="symbol"/>
                </lightning:layoutItem>
            
            </lightning:layout>
        </lightning:layoutItem>
        <lightning:layoutItem size="6" alignmentBump="left">
            <lightning:buttonGroup>
                <lightning:button label="+" onclick="{!c.incItem}"/>
                <lightning:button label="-" onclick="{!c.decItem}"/>
                <lightning:button variant="destructive" label="Remove" onclick="{!c.removeItem}"/>
            </lightning:buttonGroup>
        </lightning:layoutItem>
    </lightning:layout>
</aura:component>